{
  "files.exclude": {
    ".git/": true,
    ".awcache/": true,
    "node_modules/": false,
    "dist/": false,
    "externals/": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true
  },
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "[json]": {
    "editor.formatOnSave": false
  },
  "tslint.autoFixOnSave": true,
  "typescript.tsdk": "./node_modules/typescript/lib",
  "cSpell.words": ["Refetch", "Styleguide", "Truthy", "Validators"],
  "debug.node.autoAttach": "on"
}
